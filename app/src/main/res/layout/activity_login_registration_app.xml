<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1289A7"
    tools:context=".LoginRegistrationAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#1e272e" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="Email Address"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/primary_material_light"
                android:textColorHint="@color/primary_dark_material_light"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/primary_material_dark"
                app:met_textColor="@color/primary_dark_material_light"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:backgroundTint="@color/primary_material_light"
                android:textColorHint="@color/primary_dark_material_light"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/primary_material_dark"
                app:met_textColor="@color/primary_dark_material_light" />
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminateTint="#4bcffa"
            android:visibility="gone"
            tools:targetApi="LOLLIPOP"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Login"
                android:textSize="20sp"
                android:textColor="@color/primary_material_dark"
                android:textAllCaps="false"
                android:background="?attr/selectableItemBackground"
            />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Register"
                android:textSize="20sp"
                android:textColor="@color/primary_material_dark"
                android:textAllCaps="false"
                android:background="?attr/selectableItemBackground"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Forget password?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/button_material_light"
            android:linksClickable="true"
            />
    </LinearLayout>

</RelativeLayout>