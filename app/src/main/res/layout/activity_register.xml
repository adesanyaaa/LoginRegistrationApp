<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <include
        android:id="@+id/toolbar"
        layout = "@layout/bar_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#1e272e" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="User Name"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:backgroundTint="@color/primary_material_light"
                android:textColorHint="@color/primary_dark_material_light"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/primary_material_dark"
                app:met_textColor="@color/primary_dark_material_light"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="Email Address"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/primary_material_light"
                android:textColorHint="@color/primary_dark_material_light"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/primary_material_dark"
                app:met_textColor="@color/primary_dark_material_light"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password_reg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:backgroundTint="@color/primary_material_light"
                android:textColorHint="@color/primary_dark_material_light"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/primary_material_dark"
                app:met_textColor="@color/primary_dark_material_light" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:background="@drawable/white_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="mobile number"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:inputType="phone"
                android:backgroundTint="@color/primary_material_light"
                android:textColorHint="@color/primary_dark_material_light"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/primary_material_dark"
                app:met_textColor="@color/primary_dark_material_light" />
        </FrameLayout>

        <RadioGroup
            android:id="@+id/radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/green_boarder">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Male"
                android:textSize="14sp"
                android:buttonTint="@color/primary_material_dark"
                tools:targetApi="LOLLIPOP"
                />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Female"
                android:textSize="14sp"
                android:buttonTint="@color/primary_material_dark"
                tools:targetApi="LOLLIPOP"
                />

        </RadioGroup>

        <ProgressBar
            android:id="@+id/progressBar_reg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminateTint="#4bcffa"
            android:visibility="gone"
            tools:targetApi="LOLLIPOP"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:elevation="10dp"
            android:background="@drawable/green_boarder"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            tools:targetApi="P">
            <Button
                android:id="@+id/register_reg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Register"
                android:textSize="20sp"
                android:textColor="@color/primary_material_dark"
                android:textAllCaps="false"
                android:background="?attr/selectableItemBackground"
                />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>